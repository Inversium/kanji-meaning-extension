{

  "manifest_version": 2,
  "name": "Kanji Meaning",
  "version": "1.0",

  "description": "Allows you to quickly see the meaning and reading of kanji.",
  "icons": {
    "48": "icons/icon-48.png"
  },

  "applications": {
    "gecko": {
      "id": "inversiumous@gmail.com",
      "strict_min_version": "55.0"
    }
  },

  "content_scripts": [
    {
      "matches": ["*://*/"],
      "js": [],
      "css": ["KanjiStyle.css"]
    }
  ],

  "background": {
    "scripts": ["js/background.js"]
  },

  "permissions": ["contextMenus", "activeTab", "webRequest", "https://kanjiapi.dev/*"],

  "web_accessible_resources": [
    "KanjiInfo.html",
    "KanjiStyle.css"
  ]

}